{
  "name": "__MSG_appName__",
  "description": "__MSG_appDescription__",
  "homepage_url": "https://github.com/austencm/better-clockify",
  "version": "1.0.1",
  "manifest_version": 3,
  "default_locale": "en",
  "permissions": ["activeTab", "declarativeContent", "scripting"],
  "incognito": "split",
  "icons": {
    "128": "images/128x128.png"
  },
  "action": {
    "default_icon": {
      "16": "images/16x16.png",
      "32": "images/32x32.png",
      "48": "images/48x48.png"
    },
    "default_title": "Round time entries"
  },
  "background": {
    "service_worker": "background.js"
  }
}
